<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="MyStyle"
	       parent="@android:style/Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/MyStyle.ActionBar</item>
		<item name="android:actionOverflowButtonStyle">@style/MyStyle.ActionButtonOverflow</item>
		<item name="android:windowBackground">@color/ui_light_background</item>
	</style>

	<style name="MyStyle.ActionBar"
	       parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@color/ui_light_background_second</item>
		<item name="android:logo">@drawable/ic_for_bar_light</item>
		<item name="android:titleTextStyle">@style/MyStyle.TitleTextStyle</item>
	</style>

	<style name="MyStyle.Dark"
	       parent="@android:style/Theme.Holo">
		<item name="android:actionBarStyle">@style/MyStyle.ActionBar</item>
		<item name="android:actionOverflowButtonStyle">@style/MyStyle.ActionButtonOverflow</item>
		<item name="android:windowBackground">@color/ui_dark_background</item>
	</style>

	<style name="MyStyle.Dark.ActionBar"
	       parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@color/ui_dark_background_second</item>
		<item name="android:logo">@drawable/ic_for_bar_light</item>
		<item name="android:titleTextStyle">@style/MyStyle.TitleTextStyle</item>
	</style>

	<style name="MyStyle.TitleTextStyle"
	       parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="MyStyle.ActionButtonOverflow"
	       parent="android:style/Widget.Holo.ActionButton.Overflow">
		<item name="android:src">@drawable/ic_overflow_light</item>
	</style>

	<style name="MyStyle.PopupBar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:layout_marginRight">8dp</item>
		<item name="android:layout_marginBottom">16dp</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">@drawable/popupbar</item>
		<item name="android:clickable">true</item>
		<item name="android:showDividers">middle</item>
		<item name="android:divider">@drawable/popupbar_divider</item>
		<item name="android:dividerPadding">10dp</item>
	</style>

	<style name="MyStyle.PopupBarButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:drawablePadding">12dp</item>
		<item name="android:textAppearance">?android:textAppearanceSmall</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#fff</item>
		<item name="android:text">@string/undo</item>
	</style>

	<style name="MyStyle.PopupBarMessage">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:textAppearance">?android:textAppearanceMedium</item>
		<item name="android:textColor">#fff</item>
	</style>

</resources>